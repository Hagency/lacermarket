<p id="notice"><%= notice %></p>

<!-- <h1>Listing Contents</h1> -->
<div class="row">
     <div class="col l12 center">
                        <%= will_paginate @contents, class: "center" %>
</div>
    <% @contents.each do |content| %>
 
<div>
  
<div class="col l4 ">
 <div class="card" >
          <div class="card-image waves-effect waves-block waves-light" style="height: 150px;">
          <%= image_tag content.cover.url, class: "activator" %>
          </div>
          <div class="card-content">
            <p class="card-title activator grey-text text-darken-4 s12"><%= content.title %>  <a class="btn-floating btn-large waves-effect waves-light blue right" style="margin-bottom: 15px;"><i class="material-icons right">+</i></a> </p>

            <p class="chip" ><%= content.user.name %> <img src=""></p>
            <p class="right" ><%= number_to_currency(content.price) %> </p>
            <p><%= link_to 'Show', content , class: "btn btn-devise waves-light waves-effect blue"%></p>

            <% if content.user == current_user %>
            <p><%= link_to 'Edit', edit_content_path(content), class: "btn btn-devise waves-light waves-effect"%></p>
            <p style="background-color: white; color: black;"><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-devise waves-light waves-effect", style: "background-color: red;" %></p>
            <% end %>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= content.title %> <a class="btn-floating btn-large waves-effect waves-light red right" style="margin-bottom: 15px;"><i class="material-icons">x</i></a></span>

            <div style="color: red;">
            <p ><%= content.description %></p>
            </div>
          </div>

    </div>
</div>
</div>
  <% end %>


                             <% if user_signed_in? %>
            <%=  link_to 'New Content', new_content_path, class: "btn btn-devise waves-light waves-effect"%>
              <% else %>
            <%=  link_to 'Comincia a vendere anche tu', root_path , data: { confirm: 'Are you sure?' }, class: "btn btn-devise waves-light waves-effect"%>
            <% end %>
</div>


      


        



         


